## â€”â€” Coding standards ðŸŽ¨ â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”
cs:
	make codesniffer
	make stan
	make cs-fix

codesniffer:
	./vendor/bin/php-cs-fixer fix src/
stan:
	./vendor/bin/phpstan analyse src/ --memory-limit 1G
cs-fix:
	./vendor/squizlabs/php_codesniffer/bin/phpcs -n -p src/


